package my.collection;

import java.util.ArrayList;
import java.util.List;

class Emps {
	private int age;
	private String name;
	private double sal;

	public Emps(int age, String name, double sal) {
		super();
		this.age = age;
		this.name = name;
		this.sal = sal;
	}

	// non-parameterized constructor
	public Emps() {

	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSal() {
		return sal;
	}

	public void setSal(double sal) {
		this.sal = sal;
	}

//	If your ArrayList stores custom objects, and you have to override toString()
//	because for pre-defined objects ArrayList already overridden the toString()
	@Override
	public String toString() {
		return "[age=" + age + ", name=" + name + ", sal=" + sal + "]";
	}
}

public class Ex10CustomArrayList {
	public static void main(String[] args) {
		List<Emps> empList = new ArrayList<>();
		Emps e1 = new Emps(26, "Tarun", 2000.0);
		Emps e2 = new Emps(29, "Mahesh", 5000.0);

		// If u don't want to initialization via constructor and u want to initialize
		// via setters, then first we have to create one non-parameterized constructor
		// inside Emps class.
		Emps e3 = new Emps();
		e3.setAge(24);
		e3.setName("Ravi");
		e3.setSal(40000.0);

		empList.add(e1);
		empList.add(e2);
		empList.add(e3);

//		for (Emps e : empList) {
//			// If u don't want the output in array form then call getters inside for loop
//			System.out.println(e.getAge() + ", " + e.getName() + ", " + e.getSal());
//		}
		// If u want output in ArrayList then print the empList inside for loop only
		// make sure in Emps class you overridden ToString() method because ArrayList for
		// pre-define Object (like Integer, String, DOuble, etc) overridden toString()
		// method by default but in this code we are using user-define object Emps so we
		// have to override toString() method in Emps class manually
		
		
		for (Emps e : empList) {
			System.out.println(empList);
		}
	}
}
