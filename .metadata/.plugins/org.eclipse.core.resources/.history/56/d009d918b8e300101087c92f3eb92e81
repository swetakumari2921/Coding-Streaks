package my.collection;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

class Emps5 implements Comparable<Emps5> {
	private int age;
	private String name;
	private double sal;

	// Parameterized constructor
	public Emps5(int age, String name, double sal) {
		this.age = age;
		this.name = name;
		this.sal = sal;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSal() {
		return sal;
	}

	public void setSal(double sal) {
		this.sal = sal;
	}

	// ArrayList, for pre-define Objects (like Integer, String, Double, etc)
	// overridden toString() method by default
	// But when we use user-defaine object then we have to Override toString()
	// manually
	@Override
	public String toString() {
		return "[age=" + age + ", name=" + name + ", sal=" + sal + "]";
	}

	// we are doing sorting in ascending order
//	@Override
//	public int compareTo(Emps5 o) {
//		if (this.age > o.age) { // we can reduce this 6 line of code in one line. Without using ternary operator
//			return 1;
//		} else if (this.age < o.age) {
//			return -1;
//		} else {
//			return 0;
//		}
//	}

	// reduced code
//	@Override
//	public int compareTo(Emps5 o) {
//		return this.age-o.age; // but this logic will not work for name means Strings value
//	}	

	// now, we are doing sorting in descending order
//	@Override
//	public int compareTo(Emps5 o) {
//		return o.age - this.age; // but this logic will not work for name means Strings value
//
//	}

	// Now one scenario is there if two employee has same age then do sorting on the
	// bases of salary
	@Override
	public int compareTo(Emps5 o) {
		int x = this.age - o.age;
		if (x != 0) {
			return x;
		} else if (this.sal > o.sal) {
			return 1;
		} else if (this.sal < o.sal) {
			return -1;
		} else {
			return 0;
		}
	}

	// Now one more scenario is there suppose age is same then i want to sort it based on name
	// refer next example
}

public class Ex16 {
	public static void main(String[] args) {
		List<Emps5> empList = new ArrayList<>();
		Emps5 e1 = new Emps5(26, "Tarun", 50000.0);
		Emps5 e2 = new Emps5(26, "Deepak", 45000.0);
		Emps5 e3 = new Emps5(30, "Ravi", 40000.0);
		Emps5 e4 = new Emps5(21, "Alok", 35000.0);

		empList.add(e1);
		empList.add(e2);
		empList.add(e3);
		empList.add(e4);

		System.out.println("Before sorting: ");
		for (Emps5 e : empList) {
			System.out.println(e);
		}

		Collections.sort(empList);
		System.out.println("After sorting: ");
		for (Emps5 e : empList) {
			System.out.println(e);
		}

	}
}